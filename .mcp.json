{
  "mcpServers": {
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {
        "WORKING_DIR": ".claude"
      }
    },
    "shrimp-task-manager": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "mcp-shrimp-task-manager"
      ],
      "env": {
        "DATA_DIR": ".claude/shrimp",
        "TEMPLATES_USE": "zh",
        "ENABLE_GUI": "false"
      }
    },
    "codex": {
      "type": "stdio",
      "command": "codex",
      "args": [
        "mcp-server"
      ],
      "env": {
        "WORKING_DIR": ".claude"
      }
    },
    "code-index": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "code-index-mcp"
      ],
      "env": {
        "WORKING_DIR": ".claude"
      }
    },
    "chrome-devtools": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "env": {
        "WORKING_DIR": ".claude"
      }
    }
  }
}
